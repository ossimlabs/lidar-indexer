<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="02" author="teamhercules">
        <createTable tableName="metadata"
                     remarks="A table to contain the lidar metadata">
            <column name="id" type="int">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="ingestdate" type="date">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="bbox" type="varchar(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="keyword" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="s3link" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>